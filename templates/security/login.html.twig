{% extends 'base.html.twig' %}

{% block title %}Connexion - Jordan E-commerce{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Quadrillage basketball sur toute la page */
        body {
            background: #000000;
            background-image: 
                linear-gradient(rgba(220, 20, 60, 0.3) 1px, transparent 1px),
                linear-gradient(90deg, rgba(220, 20, 60, 0.3) 1px, transparent 1px);
            background-size: 80px 80px;
            animation: basketballGrid 4s ease-in-out infinite;
        }

        @keyframes basketballGrid {
            0%, 100% { 
                background-size: 80px 80px;
                opacity: 0.8;
            }
            50% { 
                background-size: 85px 85px;
                opacity: 1;
            }
        }

        /* Navbar fixe */
        .navbar {
            position: fixed !important;
            top: 0;
            left: 0;
            right: 0;
            z-index: 1000;
            background: rgba(0, 0, 0, 0.9) !important;
            backdrop-filter: blur(10px);
            border-bottom: 1px solid rgba(220, 20, 60, 0.3);
        }

        /* Ajustement du body pour compenser la navbar fixe */
        body {
            padding-top: 76px; /* Ajustez selon la hauteur de votre navbar */
        }

        .login-page {
            min-height: calc(100vh - 76px);
            display: flex;
            align-items: center;
            justify-content: center;
            background: #000000;
            position: relative;
        }

        .login-container {
            position: relative;
            z-index: 2;
            width: 100%;
            max-width: 400px;
            padding: 20px;
        }

        .login-card {
            background: rgba(0, 0, 0, 0.8); /* Fond noir semi-transparent */
            backdrop-filter: blur(10px);
            border: 1px solid rgba(220, 20, 60, 0.3);
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.5);
            animation: cardFloat 6s ease-in-out infinite;
            overflow: hidden;
        }

        @keyframes cardFloat {
            0%, 100% { transform: translateY(0px); }
            50% { transform: translateY(-10px); }
        }

        .login-card-header {
            background: linear-gradient(135deg, #DC143C, #B91C3C);
            color: white;
            text-align: center;
            border-bottom: none;
            padding: 20px;
            position: relative;
            overflow: hidden;
        }

        .login-card-header::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: linear-gradient(45deg, transparent, rgba(255, 255, 255, 0.1), transparent);
            animation: shine 3s infinite;
        }

        @keyframes shine {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        .login-card-header h4 {
            margin: 0;
            font-weight: bold;
            font-size: 1.5rem;
            letter-spacing: 2px;
            position: relative;
            z-index: 1;
        }

        .card-body {
            padding: 30px;
            background: rgba(0, 0, 0, 0.9); /* Fond noir pour le corps de la carte */
            color: white; /* Texte blanc pour contraster */
        }

        .login-input {
            border: 2px solid rgba(220, 20, 60, 0.5);
            border-radius: 10px;
            padding: 15px;
            transition: all 0.3s ease;
            background: rgba(255, 255, 255, 0.1);
            color: white;
        }

        .login-input::placeholder {
            color: rgba(255, 255, 255, 0.7);
        }

        .login-input:focus {
            border-color: #DC143C;
            box-shadow: 0 0 20px rgba(220, 20, 60, 0.5);
            background: rgba(255, 255, 255, 0.2);
            transform: translateY(-2px);
            outline: none;
        }

        .login-btn {
            background: linear-gradient(135deg, #DC143C, #B91C3C);
            border: none;
            border-radius: 10px;
            padding: 15px;
            font-weight: bold;
            font-size: 1.1rem;
            letter-spacing: 1px;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
            color: white;
        }

        .login-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(220, 20, 60, 0.4);
            background: linear-gradient(135deg, #B91C3C, #DC143C);
        }

        .login-btn:active {
            transform: translateY(-1px);
        }

        .jordan-link {
            color: #DC143C;
            text-decoration: none;
            font-weight: bold;
            transition: all 0.3s ease;
        }

        .jordan-link:hover {
            color: #B91C3C;
            text-decoration: underline;
        }

        .error-shake {
            animation: shake 0.5s ease-in-out;
        }

        @keyframes shake {
            0%, 100% { transform: translateX(0); }
            10%, 30%, 50%, 70%, 90% { transform: translateX(-5px); }
            20%, 40%, 60%, 80% { transform: translateX(5px); }
        }

        .form-label {
            font-weight: bold;
            color: white; /* Labels en blanc */
            margin-bottom: 8px;
        }

        /* Alerte d'erreur adaptée au thème sombre */
        .alert-danger {
            background: rgba(220, 20, 60, 0.2);
            border: 1px solid rgba(220, 20, 60, 0.5);
            color: white;
        }

        /* Responsive */
        @media (max-width: 576px) {
            .login-container {
                padding: 15px;
            }
            
            .card-body {
                padding: 20px;
            }
            
            .login-card-header h4 {
                font-size: 1.3rem;
            }
            
            body {
                padding-top: 60px; /* Ajustement pour mobile */
            }
        }

        /* Animation d'apparition */
        .login-card {
            animation: fadeInUp 0.8s ease-out;
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes float {
            0%, 100% { transform: translateY(0px); }
            50% { transform: translateY(-10px); }
        }

        /* Texte en bas en blanc */
        .text-center p {
            color: white;
        }
    </style>
{% endblock %}

{% block body %}
<div class="login-page">
    <div class="login-container">
        <div class="card login-card">
            <div class="card-header login-card-header">
                <h4><i class="fas fa-sign-in-alt"></i> CONNEXION</h4>
            </div>
            <div class="card-body">
                {% if error %}
                    <div class="alert alert-danger error-shake">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                
                <form method="post">
                    <div class="mb-3">
                        <label for="inputEmail" class="form-label">Email</label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control login-input" autocomplete="email" required autofocus>
                    </div>
                    
                    <div class="mb-3">
                        <label for="inputPassword" class="form-label">Mot de passe</label>
                        <input type="password" name="password" id="inputPassword" class="form-control login-input" autocomplete="current-password" required>
                    </div>
                    
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    
                    <div class="d-grid">
                        <button class="btn btn-jordan login-btn" type="submit">
                            <i class="fas fa-sign-in-alt"></i> SE CONNECTER
                        </button>
                    </div>
                </form>
                
                <div class="text-center mt-3">
                    <p>Pas encore de compte ? <a href="{{ path('app_register') }}" class="jordan-link">Inscrivez-vous</a></p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}