{% extends 'base.html.twig' %}

{% block title %}Jordan E-commerce - Accueil{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    /* Quadrillage basketball sur toute la page */
    body {
        background: #000000;
        background-image: 
            linear-gradient(rgba(220, 20, 60, 0.3) 1px, transparent 1px),
            linear-gradient(90deg, rgba(220, 20, 60, 0.3) 1px, transparent 1px);
        background-size: 80px 80px;
        animation: basketballGrid 4s ease-in-out infinite;
        padding-top: 76px; /* Ajustement pour la navbar fixe */
    }

    @keyframes basketballGrid {
        0%, 100% { 
            background-size: 80px 80px;
            opacity: 0.8;
        }
        50% { 
            background-size: 85px 85px;
            opacity: 1;
        }
    }

    /* Navbar fixe */
    .navbar {
        position: fixed !important;
        top: 0;
        left: 0;
        right: 0;
        z-index: 1000;
        background: rgba(0, 0, 0, 0.9) !important;
        backdrop-filter: blur(10px);
        border-bottom: 1px solid rgba(220, 20, 60, 0.3);
    }

    /* Ajustements pour le fond noir */
    .page-content {
        color: white;
        min-height: calc(100vh - 76px);
        padding: 20px 0;
    }
    
    .collection-title {
        color: #DC143C;
        font-weight: bold;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8);
        font-size: 2.5rem;
        letter-spacing: 2px;
        margin-bottom: 30px;
        text-transform: uppercase;
        position: relative;
        z-index: 1;
    }
    
    .text-center p {
        color: white;
    }

    /* Cartes produits avec fond noir */
    .card {
        background: rgba(0, 0, 0, 0.8) !important;
        backdrop-filter: blur(10px);
        border: 1px solid rgba(220, 20, 60, 0.3);
        border-radius: 20px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.5);
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
        animation: cardFloat 6s ease-in-out infinite;
    }

    @keyframes cardFloat {
        0%, 100% { transform: translateY(0px); }
        50% { transform: translateY(-10px); }
    }

    .card::before {
        content: '';
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: linear-gradient(45deg, transparent, rgba(255, 255, 255, 0.1), transparent);
        animation: shine 3s infinite;
        z-index: 1;
    }

    @keyframes shine {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
    }

    .card:hover {
        transform: translateY(-15px);
        box-shadow: 0 25px 50px rgba(220, 20, 60, 0.4);
        border-color: #DC143C;
    }

    .card-body {
        background: rgba(0, 0, 0, 0.9);
        color: white;
        position: relative;
        z-index: 2;
        padding: 30px;
    }

    .card-title {
        color: #DC143C;
        font-weight: bold;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.8);
        font-size: 1.2rem;
        margin-bottom: 15px;
    }

    .card-text {
        color: #E0E0E0;
        line-height: 1.6;
        margin-bottom: 15px;
    }

    .card-body strong {
        color: #DC143C;
        font-size: 1.3em;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.8);
    }

    .card-img-top {
        border-radius: 20px 20px 0 0;
        transition: transform 0.3s ease;
        position: relative;
        z-index: 2;
    }

    .card:hover .card-img-top {
        transform: scale(1.05);
    }

    /* Bouton Jordan */
    .btn-jordan {
        background: linear-gradient(135deg, #DC143C, #B91C3C);
        border: none;
        border-radius: 10px;
        padding: 15px 30px;
        font-weight: bold;
        font-size: 1.1rem;
        letter-spacing: 1px;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
        color: white;
        text-transform: uppercase;
        box-shadow: 0 10px 25px rgba(220, 20, 60, 0.3);
    }

    .btn-jordan:hover {
        transform: translateY(-3px);
        box-shadow: 0 15px 35px rgba(220, 20, 60, 0.5);
        background: linear-gradient(135deg, #B91C3C, #DC143C);
        color: white;
    }

    .btn-jordan:active {
        transform: translateY(-1px);
    }

    /* Bouton ajouter au panier */
    .btn-danger {
        background: linear-gradient(135deg, #DC143C, #B91C3C);
        border: none;
        border-radius: 10px;
        padding: 12px 25px;
        font-weight: bold;
        letter-spacing: 1px;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
        text-transform: uppercase;
        font-size: 0.9rem;
    }

    .btn-danger:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(220, 20, 60, 0.4);
        background: linear-gradient(135deg, #B91C3C, #DC143C);
    }

    /* Rupture de stock */
    .text-muted {
        color: white !important;
        background: rgba(220, 20, 60, 0.2);
        padding: 10px 20px;
        border-radius: 10px;
        font-weight: bold;
        text-align: center;
        border: 1px solid rgba(220, 20, 60, 0.5);
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    /* Message aucun produit */
    .col-12 p {
        background: rgba(0, 0, 0, 0.8);
        color: white;
        padding: 40px;
        border-radius: 20px;
        border: 1px solid rgba(220, 20, 60, 0.3);
        font-size: 1.3em;
        font-weight: bold;
        text-align: center;
        margin: 50px 0;
        backdrop-filter: blur(10px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.5);
    }

    /* Animations d'apparition */
    .card {
        animation: fadeInUp 0.8s ease-out;
        opacity: 0;
        transform: translateY(30px);
        animation-fill-mode: forwards;
    }

    .card:nth-child(1) { animation-delay: 0.1s; }
    .card:nth-child(2) { animation-delay: 0.2s; }
    .card:nth-child(3) { animation-delay: 0.3s; }
    .card:nth-child(4) { animation-delay: 0.4s; }
    .card:nth-child(5) { animation-delay: 0.5s; }
    .card:nth-child(6) { animation-delay: 0.6s; }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Responsive */
    @media (max-width: 768px) {
        body {
            padding-top: 60px;
        }
        
        .card {
            margin-bottom: 25px;
        }
        
        .collection-title {
            font-size: 2rem;
        }
        
        .btn-jordan {
            padding: 12px 25px;
            font-size: 1rem;
        }
        
        .card-body {
            padding: 20px;
        }
    }
</style>
{% endblock %}

{% block body %}
<div class="page-content">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="text-center mb-4 collection-title">Collection Jordan</h1>
            <div class="text-center mb-4">
                <a href="#" class="btn btn-jordan">Voir la boutique</a>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            {% for product in products %}
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <img src="{{ product.image }}" class="card-img-top" alt="{{ product.name }}">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">{{ product.name }} - {{ product.model }}</h5>
                            <p class="card-text">{{ product.description|length > 120 ? product.description|slice(0, 120) ~ '...' : product.description }}</p>
                            <p><strong>{{ product.price }} â‚¬</strong></p>
                            {% if product.quantity > 0 %}
                                <a href="{{ path('app_cart_add', {'id': product.id}) }}" class="btn btn-danger mt-auto">Ajouter au panier</a>
                            {% else %}
                                <span class="text-muted">Rupture de stock</span>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <p class="text-center">Aucun produit disponible pour le moment.</p>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}